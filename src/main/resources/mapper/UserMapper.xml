<mapper namespace="com.templateTools.dao.UserMapper" >
  	<!-- 添加,插入记录   -->
	<insert id="insertUser" parameterType="com.templateTools.entity.UserEntity" >
	    insert into sys_user (<include refid="com.templateTools.dao.field.UserFieldMapper.insertUserColumns"/>) values(<include refid="com.templateTools.dao.field.UserFieldMapper.insertUserParams"/>)
	</insert>
	
	<!-- 删除,主键删除   -->
	<delete id="deleteUserByPrimaryKey" parameterType="com.templateTools.entity.UserEntity">
	    delete from sys_user where 1=1 <include refid="com.templateTools.dao.field.UserFieldMapper.noPrefixKeyUser"/>
	</delete>
	
	<!-- 删除,实体删除   -->
	<delete id="deleteUserByEntity" parameterType="com.templateTools.entity.UserEntity">
	    delete from sys_user where 1=1 <include refid="com.templateTools.dao.field.UserFieldMapper.deleteAllUser"/>
	</delete>
	
	<!-- 修改,主键更新  -->
	<update id="updateUserByPrimaryKey" parameterType="com.templateTools.entity.UserEntity" >
		update sys_user
			<set><include refid="com.templateTools.dao.field.UserFieldMapper.updateUserParams"/></set>
			where 1=1 <include refid="com.templateTools.dao.field.UserFieldMapper.noPrefixKeyUser"/>
	</update>

	<!-- 查询,实体查询   -->
	<select id="selectUserAndRoles" resultMap="com.templateTools.dao.field.UserFieldMapper.userResultMap" parameterType="com.templateTools.entity.UserEntity">
		select <include refid="com.templateTools.dao.field.UserFieldMapper.userColumns"/>
		,r.role_code as roleCode
		,r.role_name as roleName
		from sys_user sys_user
		left join sys_user_role ur on sys_user.id = ur.user_id
		left join sys_role r on ur.role_id = r.id
		where 1=1 and sys_user.isdel=0 <include refid="com.templateTools.dao.field.UserFieldMapper.andAllUser"/>
	</select>
	
	<!-- 查询,实体查询   -->
	<select id="selectUserByEntry" resultMap="com.templateTools.dao.field.UserFieldMapper.userResultMap" parameterType="com.templateTools.entity.UserEntity">
		select <include refid="com.templateTools.dao.field.UserFieldMapper.userColumns"/>
		from sys_user sys_user 
		where 1=1 and sys_user.isdel=0 <include refid="com.templateTools.dao.field.UserFieldMapper.andAllUser"/>
	</select>
	
	<!-- 查询,ID查询   -->
	<select id="selectUserById" resultMap="com.templateTools.dao.field.UserFieldMapper.userResultMap" parameterType="java.lang.String">
		select <include refid="com.templateTools.dao.field.UserFieldMapper.userColumns"/>
		from sys_user sys_user 
		where 1=1 and sys_user.isdel=0 <include refid="com.templateTools.dao.field.UserFieldMapper.primaryKeyUser"/>
	</select>
	
  	<!-- 批量插入 mysql -->
  	<insert id="insertUserBatch_mysql" parameterType="java.util.List">
  		insert into sys_user (<include refid="com.templateTools.dao.field.UserFieldMapper.insertUserBatchColumns"/>)
  		values
  		<foreach collection="list" item="item" index="index" separator=",">
  			(<include refid="com.templateTools.dao.field.UserFieldMapper.insertUserBatchParams"/>)
  		</foreach>
  	</insert>
  	<!-- 批量插入 oracle -->
  	<insert id="insertUserBatch_oracle" parameterType="java.util.List" useGeneratedKeys="false">
  		insert all
  		<foreach collection="list" item="item" index="index">
  		into sys_user (<include refid="com.templateTools.dao.field.UserFieldMapper.insertUserBatchColumns"/>)
  		values 
  			(<include refid="com.templateTools.dao.field.UserFieldMapper.insertUserBatchParams"/>)
  		</foreach>
  		select 1 from dual
  	</insert>
  	<!-- 批量删除 -->
  	<delete id="deleteUserBatch" parameterType="java.util.List">
  		delete from sys_user where
		id in 	<!--  -->
  		<foreach collection="list" item="item" index="index" open="(" separator="," close=")">
  			#{item}
  		</foreach>
  	</delete>
  	
  	<!-- 逻辑删除  -->
	<update id="logicUserDelete" parameterType="com.templateTools.entity.UserEntity" >
		update sys_user
			set isdelete = 1 	<!-- 逻辑删除 -->
		where 1=1 <include refid="com.templateTools.dao.field.UserFieldMapper.noPrefixKeyUser"/>
	</update>
	
  	<!-- 批量逻辑删除 -->
  	<update id="logicUserDeleteBatch" parameterType="java.util.List" >
		update sys_user
			set isdelete = 1 	<!-- 逻辑删除 -->
		where 
			id in 	<!--  -->
	  		<foreach collection="list" item="item" index="index" open="(" separator="," close=")">
	  			#{item}
	  		</foreach>
	</update>
</mapper>